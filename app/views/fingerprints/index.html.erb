
<h1>Listing fingerprints</h1>

<%= form_tag({:controller =>"fingerprints",:action => "non_work_day"}, :method => "post") do %>
    <%= label_tag(:employee_name, "Search for:") %>
    <%= text_field_tag(:employee_name) %>
    <%= submit_tag("Search") %>
<% end %>


<table>
  <tr>
    <th>Dept name</th>
    <th>Employee name</th>
    <th>Employee no</th>
    <th>Fp time</th>
    <th>Machine</th>
    <th>No</th>
    <th>Pattern</th>
    <th>Card no</th>
    <th>File name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @fingerprints.each do |fingerprint| %>
  <tr>
    <td><%= fingerprint.dept_name %></td>
    <td><%= fingerprint.employee_name %></td>
    <td><%= fingerprint.employee_no %></td>
    <td><%= fingerprint.fp_time %></td>
    <td><%= fingerprint.machine %></td>
    <td><%= fingerprint.no %></td>
    <td><%= fingerprint.pattern %></td>
    <td><%= fingerprint.card_no %></td>
    <td><%= fingerprint.file_name %></td>
    <td><%= link_to 'Show', fingerprint %></td>
    <td><%= link_to 'Edit', edit_fingerprint_path(fingerprint) %></td>
    <td><%= link_to 'Destroy', fingerprint, method: :delete, data: {confirm: 'Are you sure?'} %></td>
  </tr>
<% end %>
</table>

